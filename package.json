{
  "name": "wordle-score",
  "version": "1.0.0",
  "description": "Wordle Score Calculator - Calculate scores from Wordle share text",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc --version && tsc",
    "postbuild": "ls -la dist/ && test -f dist/server.js || (echo 'ERROR: dist/server.js not found after build!' && exit 1)",
    "start": "node dist/server.js",
    "dev": "nodemon",
    "watch:css": "tailwindcss -i ./public/css/input.css -o ./public/css/output.css --watch",
    "test": "echo \"Error: no test runner configured\" && exit 1"
  },
  "keywords": ["wordle", "score", "calculator"],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "ejs": "^3.1.9",
    "express-ejs-layouts": "^2.5.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "tailwindcss": "^3.4.0",
    "postcss": "^8.4.32",
    "autoprefixer": "^10.4.16"
  }
}

