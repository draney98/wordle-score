<div class="max-w-4xl mx-auto">
  <!-- Hero Section -->
  <div class="text-center mb-8">
    <h1 class="text-4xl font-bold text-orange-500 mb-2">Wordle Score Calculator</h1>
    <p class="text-gray-400">Paste your Wordle share text to calculate your score</p>
  </div>

  <!-- Input Form -->
  <div class="bg-gray-800 rounded-lg shadow-lg p-6 mb-6" id="inputFormSection">
    <form method="POST" action="/score" id="wordleForm">
      <div class="mb-4">
        <div class="flex justify-between items-center mb-2">
          <label for="wordleText" class="block text-sm font-medium text-gray-300">
            Wordle Share Text
          </label>
          <button
            type="button"
            id="generateSampleButton"
            class="text-sm bg-gray-700 hover:bg-gray-600 text-gray-300 px-3 py-1 rounded transition-colors"
          >
            Generate Sample
          </button>
        </div>
        <textarea
          id="wordleText"
          name="wordleText"
          rows="6"
          class="w-full px-4 py-3 bg-gray-700 border border-gray-600 rounded-lg text-gray-100 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-orange-500 focus:border-transparent"
          placeholder="Paste your Wordle share text here...&#10;&#10;Example:&#10;Wordle 123 3/6&#10;&#10;‚¨õüü®üü©‚¨õüü®&#10;üü®üü©üü®üü©üü©&#10;üü©üü©üü©üü©üü©"
          required
        ><%= typeof wordleText !== 'undefined' && wordleText ? wordleText : '' %></textarea>
      </div>
      <button
        type="submit"
        class="w-full bg-orange-600 hover:bg-orange-700 text-white font-semibold py-3 px-6 rounded-lg transition-colors"
      >
        Calculate Score
      </button>
    </form>
  </div>

  <!-- Error Message -->
  <% if (typeof error !== 'undefined' && error) { %>
    <div class="bg-red-900 border border-red-700 rounded-lg p-4 mb-6">
      <p class="text-red-200"><%= error %></p>
    </div>
  <% } %>

  <!-- Results Section -->
  <% if (typeof result !== 'undefined' && result) { %>
    
    <div class="bg-gray-800 rounded-lg shadow-lg p-6 mb-6" id="resultsSection">
      <!-- Original Boxes Display -->
      <div class="mb-6">
        <h2 class="text-2xl font-bold text-orange-500 mb-4">Your Wordle Result</h2>
        <div class="bg-gray-900 rounded-lg p-4">
          <div class="space-y-2 text-2xl font-mono text-center">
            <% result.guesses.forEach(function(guess) { %>
              <div><%= guess %></div>
            <% }); %>
          </div>
        </div>
      </div>

      <!-- Score Display -->
      <div class="mb-6 text-center">
        <div class="score-reveal score-glow score-gradient inline-block px-8 py-6 rounded-lg">
          <div class="text-6xl font-bold text-white mb-2 number-count" style="text-shadow: 2px 2px 4px rgba(0,0,0,0.8);">
            <%= result.totalScore %>
          </div>
          <div class="text-xl text-orange-300 font-semibold">
            <% if (result.totalScore >= 90) { %>
              Outstanding! üåü
            <% } else if (result.totalScore >= 70) { %>
              Great job! üéâ
            <% } else if (result.totalScore >= 50) { %>
              Good effort! üëç
            <% } else if (result.totalScore >= 30) { %>
              Keep trying! üí™
            <% } else { %>
              Better luck next time! üçÄ
            <% } %>
          </div>
        </div>
      </div>

      <!-- Detailed Breakdown (Expandable) -->
      <div class="mb-6">
        <div class="text-center mb-4">
          <button
            id="toggleBreakdown"
            class="text-orange-400 hover:text-orange-300 transition-colors font-semibold text-sm uppercase tracking-wide flex items-center gap-2 mx-auto"
            onclick="toggleBreakdown()"
          >
            <span id="toggleBreakdownText">Show</span> Detailed Breakdown
            <svg id="toggleBreakdownIcon" class="w-4 h-4 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </button>
        </div>

        <div id="breakdownContent" class="expandable-content collapsed">
          <!-- Box Scores -->
          <div class="bg-gray-900 rounded-lg p-4 mb-4">
            <h3 class="text-lg font-semibold text-gray-300 mb-3">Box Scores</h3>
            <div class="space-y-2 text-gray-300 font-mono text-lg">
              <% result.guesses.forEach(function(guess, index) { %>
                <div class="flex items-center justify-between hover:bg-gray-800/30 p-2 rounded transition-colors">
                  <span><%= guess %></span>
                  <span class="text-orange-400"><%= result.boxScores[index] %> pts</span>
                </div>
              <% }); %>
              <div class="flex items-center justify-between pt-2 border-t border-gray-700 font-semibold">
                <span>Total Box Score</span>
                <span class="text-orange-500"><%= result.boxTotal %> pts</span>
              </div>
            </div>
          </div>

          <!-- Penalties -->
          <div class="bg-gray-900 rounded-lg p-4 mb-4">
            <h3 class="text-lg font-semibold text-gray-300 mb-3">Penalties</h3>
            <div class="space-y-2 text-gray-300 font-mono text-lg">
              <% result.guesses.forEach(function(guess, index) { %>
                <div class="flex items-center justify-between hover:bg-gray-800/30 p-2 rounded transition-colors">
                  <span>Guess <%= index + 1 %></span>
                  <span class="text-red-400">Penalty: <%= result.guessPenalties[index] %> pts</span>
                </div>
              <% }); %>
              <% if (result.failurePenalty > 0) { %>
                <div class="flex items-center justify-between pt-2 border-t border-gray-700 hover:bg-gray-800/30 p-2 rounded transition-colors">
                  <span class="text-red-400">Failed to complete</span>
                  <span class="text-red-500 font-semibold">Penalty: <%= result.failurePenalty %> pts</span>
                </div>
              <% } %>
              <div class="flex items-center justify-between pt-2 border-t border-gray-700 font-semibold">
                <span>Total Penalty</span>
                <span class="text-red-500"><%= result.totalPenalty %> pts</span>
              </div>
            </div>
          </div>

          <!-- Score Breakdown -->
          <div class="bg-gray-900 rounded-lg p-4">
            <h3 class="text-lg font-semibold text-gray-300 mb-3">Score Breakdown</h3>
            <div class="space-y-2 text-gray-300 font-mono text-lg">
              <% 
                let breakdownRawTotal = 0;
                result.guesses.forEach((guess, index) => {
                  const boxScore = result.boxScores[index];
                  const penalty = result.guessPenalties[index];
                  // Net points for this guess: box score + penalty (both add to raw score)
                  const netPoints = boxScore + penalty;
                  breakdownRawTotal += netPoints;
                  // Transform for display: abs(100 - rawTotal) - higher is better
                  const transformedTotal = Math.abs(100 - breakdownRawTotal);
              %>
                <div class="flex items-center hover:bg-gray-800/30 p-2 rounded transition-colors">
                  <span class="mr-4"><%= guess %></span>
                  <span class="text-orange-400">-<%= netPoints %></span>
                  <span class="text-gray-400 mx-2">,</span>
                  <span class="text-orange-500 font-semibold"><%= transformedTotal %></span>
                </div>
              <% }); %>
              <% if (result.failurePenalty > 0) { %>
                <% breakdownRawTotal += result.failurePenalty; %>
                <% const transformedTotal = Math.abs(100 - breakdownRawTotal); %>
                <div class="flex items-center pt-2 border-t border-gray-700 hover:bg-gray-800/30 p-2 rounded transition-colors">
                  <span class="mr-4 text-red-400">Failed to complete</span>
                  <span class="text-red-400">-<%= result.failurePenalty %></span>
                  <span class="text-gray-400 mx-2">,</span>
                  <span class="text-red-500 font-semibold"><%= transformedTotal %></span>
                </div>
              <% } %>
            </div>
          </div>
        </div>
      </div>

      <!-- Copy Button -->
      <button
        id="copyButton"
        class="w-full bg-orange-600 hover:bg-orange-700 text-white font-semibold py-3 px-6 rounded-lg transition-colors"
      >
        Copy Result
      </button>
      <div id="copySuccess" class="mt-3 text-center text-green-400 text-sm" style="display: none;">
        ‚úì Copied to clipboard!
      </div>
    </div>
  <% } %>

  <!-- Scoring System Info -->
  <div id="scoringSystemSection" class="mb-6" style="display: none;">
    <!-- Expandable Scoring System Button -->
    <div class="text-center mb-4">
      <button
        id="toggleScoringSystem"
        class="text-orange-400 hover:text-orange-300 transition-colors font-semibold text-sm uppercase tracking-wide flex items-center gap-2 mx-auto"
        onclick="toggleScoringSystem()"
      >
        <span id="toggleScoringText">Show</span> Scoring System
        <svg id="toggleScoringIcon" class="w-4 h-4 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
        </svg>
      </button>
    </div>

    <!-- Expandable Scoring System Content -->
    <div id="scoringSystemContent" class="expandable-content collapsed">
      <div class="bg-gray-800 rounded-lg shadow-lg p-6">
        <h2 class="text-2xl font-bold text-orange-500 mb-4">How Scoring Works</h2>
        
        <div class="space-y-4 text-gray-300">
          <div>
            <h3 class="text-lg font-semibold text-orange-400 mb-2">Box Points (Golf-style: Lower is Better)</h3>
            <ul class="list-disc list-inside space-y-1 ml-4">
              <li><span class="text-2xl">‚¨õ</span> Black box: <strong>2 points</strong> (letter not in word)</li>
              <li><span class="text-2xl">üü®</span> Yellow box: <strong>1 point</strong> (letter in word, wrong position)</li>
              <li><span class="text-2xl">üü©</span> Green box: <strong>0 points</strong> (letter in word, correct position)</li>
            </ul>
            <p class="mt-2 text-sm text-gray-400">Note: Gray/white squares (‚¨ú), black circles (‚ö´), and brown squares (üü´) are automatically normalized to black boxes.</p>
          </div>

          <div>
            <h3 class="text-lg font-semibold text-orange-400 mb-2">Penalties</h3>
            <ul class="list-disc list-inside space-y-1 ml-4">
              <li><strong>Per-guess penalty:</strong> (guessNumber - 1) √ó 2
                <ul class="list-circle list-inside ml-6 mt-1 space-y-1 text-sm">
                  <li>Guess 1: 0 penalty</li>
                  <li>Guess 2: 2 penalty</li>
                  <li>Guess 3: 4 penalty</li>
                  <li>Guess 4: 6 penalty</li>
                  <li>Guess 5: 8 penalty</li>
                  <li>Guess 6: 10 penalty</li>
                </ul>
              </li>
              <li><strong>Failure penalty:</strong> 10 points if Wordle is not completed</li>
            </ul>
          </div>

          <div>
            <h3 class="text-lg font-semibold text-orange-400 mb-2">Final Score Calculation</h3>
            <div class="bg-gray-900 rounded-lg p-4 font-mono text-sm">
              <p class="mb-2">rawScore = boxTotal + totalPenalty</p>
              <p>finalScore = |100 - rawScore|</p>
            </div>
            <p class="mt-2 text-sm text-gray-400">
              The final score is transformed so that <strong>higher is better</strong>:
              <ul class="list-disc list-inside ml-4 mt-1 space-y-1">
                <li><strong>Perfect score:</strong> 100 points (all green boxes on first guess)</li>
                <li><strong>Failure score:</strong> 0 points (did not complete the wordle)</li>
              </ul>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Score a New Wordle Button -->
  <% if (typeof result !== 'undefined' && result) { %>
    <div class="text-center mb-6">
      <button
        id="scoreNewButton"
        onclick="scoreNewWordle()"
        class="bg-orange-600 hover:bg-orange-700 text-white font-semibold py-3 px-6 rounded-lg transition-colors"
      >
        Score a New Wordle
      </button>
    </div>
  <% } %>
</div>

<script>
  function toggleBreakdown() {
    const content = document.getElementById('breakdownContent');
    const text = document.getElementById('toggleBreakdownText');
    const icon = document.getElementById('toggleBreakdownIcon');
    
    if (content.classList.contains('collapsed')) {
      content.classList.remove('collapsed');
      text.textContent = 'Hide';
      icon.style.transform = 'rotate(180deg)';
    } else {
      content.classList.add('collapsed');
      text.textContent = 'Show';
      icon.style.transform = 'rotate(0deg)';
    }
  }

  function toggleScoringSystem() {
    const section = document.getElementById('scoringSystemSection');
    const content = document.getElementById('scoringSystemContent');
    const text = document.getElementById('toggleScoringText');
    const icon = document.getElementById('toggleScoringIcon');
    
    if (section.style.display === 'none') {
      section.style.display = 'block';
      content.classList.remove('collapsed');
      text.textContent = 'Hide';
      icon.style.transform = 'rotate(180deg)';
    } else if (content.classList.contains('collapsed')) {
      content.classList.remove('collapsed');
      text.textContent = 'Hide';
      icon.style.transform = 'rotate(180deg)';
    } else {
      content.classList.add('collapsed');
      text.textContent = 'Show';
      icon.style.transform = 'rotate(0deg)';
    }
  }

  function scoreNewWordle() {
    // Hide results section
    const resultsSection = document.getElementById('resultsSection');
    const scoringSystemSection = document.getElementById('scoringSystemSection');
    const scoreNewButton = document.getElementById('scoreNewButton');
    const inputFormSection = document.getElementById('inputFormSection');
    
    if (resultsSection) resultsSection.style.display = 'none';
    if (scoringSystemSection) scoringSystemSection.style.display = 'none';
    if (scoreNewButton) scoreNewButton.style.display = 'none';
    if (inputFormSection) inputFormSection.style.display = 'block';
    
    // Clear textarea
    const wordleTextarea = document.getElementById('wordleText');
    if (wordleTextarea) {
      wordleTextarea.value = '';
      wordleTextarea.focus();
    }
    
    // Scroll to top
    window.scrollTo({ top: 0, behavior: 'smooth' });
  }

  document.addEventListener('DOMContentLoaded', function() {
    // Hide input form if results are shown
    <% if (typeof result !== 'undefined' && result) { %>
      const inputFormSection = document.getElementById('inputFormSection');
      if (inputFormSection) {
        inputFormSection.style.display = 'none';
      }
    <% } %>

    // Generate sample button
    const generateButton = document.getElementById('generateSampleButton');
    const wordleTextarea = document.getElementById('wordleText');
    
    if (generateButton) {
      generateButton.addEventListener('click', function() {
        // Generate random number of guesses (1-6)
        const numGuesses = Math.floor(Math.random() * 6) + 1;
        const boxes = ['‚¨õ', 'üü®', 'üü©'];
        const sampleLines = [];
        
        // Generate each guess with 5 boxes
        for (let i = 0; i < numGuesses; i++) {
          let line = '';
          // Make it progressively better (more greens in later guesses)
          for (let j = 0; j < 5; j++) {
            const rand = Math.random();
            let box;
            if (i === numGuesses - 1) {
              // Last guess is always all green (winning guess)
              box = 'üü©';
            } else if (rand < 0.3 + (i * 0.1)) {
              // More greens as guesses progress
              box = 'üü©';
            } else if (rand < 0.6 + (i * 0.1)) {
              box = 'üü®';
            } else {
              box = '‚¨õ';
            }
            line += box;
          }
          sampleLines.push(line);
        }
        
        const sampleText = sampleLines.join('\n');
        
        // Copy to clipboard
        navigator.clipboard.writeText(sampleText).then(function() {
          // Also fill the textarea
          if (wordleTextarea) {
            wordleTextarea.value = sampleText;
          }
          
          // Show brief success message
          const originalText = generateButton.textContent;
          generateButton.textContent = '‚úì Copied!';
          generateButton.classList.add('bg-green-600', 'hover:bg-green-700');
          generateButton.classList.remove('bg-gray-700', 'hover:bg-gray-600');
          
          setTimeout(function() {
            generateButton.textContent = originalText;
            generateButton.classList.remove('bg-green-600', 'hover:bg-green-700');
            generateButton.classList.add('bg-gray-700', 'hover:bg-gray-600');
          }, 2000);
        }).catch(function(err) {
          console.error('Failed to copy:', err);
          alert('Failed to copy to clipboard');
        });
      });
    }
    
    <% if (typeof result !== 'undefined' && result) { %>
      // Copy functionality for results
      const copyButton = document.getElementById('copyButton');
      const copySuccess = document.getElementById('copySuccess');
      
      if (copyButton) {
        copyButton.addEventListener('click', function() {
          // Build the formatted text with optional header line
          // Use JSON.stringify to safely escape the string for JavaScript context
          <%
            const parts = [];
            
            // Add header line if present
            if (result.headerLine) {
              parts.push(result.headerLine);
              parts.push(''); // Empty line after header
            }
            
            // Add box lines
            parts.push(result.guesses.join('\n'));
            
            // Add empty line before score
            parts.push('');
            
            // Add score line
            parts.push(`Score: ${result.totalScore} points`);
            
            const formattedText = parts.join('\n');
            // Properly escape for JavaScript string context using JSON.stringify
            // This prevents injection via backticks, quotes, or other special characters
            const escapedText = JSON.stringify(formattedText);
          %>
          // Use JSON.stringify output directly (it's already a valid JavaScript string literal)
          const formattedText = <%= escapedText %>;
          
          navigator.clipboard.writeText(formattedText).then(function() {
            copySuccess.style.display = 'block';
            setTimeout(function() {
              copySuccess.style.display = 'none';
            }, 2000);
          }).catch(function(err) {
            console.error('Failed to copy:', err);
            alert('Failed to copy to clipboard');
          });
        });
      }
    <% } %>
  });
</script>
